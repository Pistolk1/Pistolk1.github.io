{
  "manifest_version": 3,
  "name": "Volumetric Video Recorder/Player",
  "description": "Record and play volumetric videos of your desktop/game.",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "desktopCapture"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": [
    "file://*/*"
  ]
}
